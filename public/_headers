# Cloudflare Pages Headers Configuration

# HTML pages - SEO and security headers
/*.html
  Cache-Control: public, max-age=3600, s-maxage=86400, stale-while-revalidate=604800
  X-Robots-Tag: index, follow
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN
  Referrer-Policy: strict-origin-when-cross-origin

# JavaScript - long cache (immutable)
/*.js
  Cache-Control: public, max-age=31536000, immutable

# CSS - long cache (immutable)
/*.css
  Cache-Control: public, max-age=31536000, immutable

# Images - long cache
/*.png
  Cache-Control: public, max-age=31536000, immutable

/*.jpg
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Cache-Control: public, max-age=31536000, immutable

/*.webp
  Cache-Control: public, max-age=31536000, immutable

# Sitemap - moderate cache with SEO headers
/sitemap.xml
  Cache-Control: public, max-age=3600, s-maxage=86400, must-revalidate
  X-Robots-Tag: index, follow

# Robots.txt - moderate cache
/robots.txt
  Cache-Control: public, max-age=86400

# Manifest - moderate cache
/manifest.json
  Cache-Control: public, max-age=86400

# Default for all pages - Basic security without strict CSP
/*
  X-Robots-Tag: index, follow
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN
  Referrer-Policy: strict-origin-when-cross-origin
